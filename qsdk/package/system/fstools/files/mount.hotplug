#!/bin/ash  
  
case "$ACTION" in  
    add)  
        for i in $(ls /dev/ | grep 'sd[a-z][1-9]')  
        do  
            mkdir -p /mnt/sda1  
            mount -o iocharset=utf8,rw /dev/$i /mnt/sda1  
            if [ $? -ne 0 ]  
            then  
                mount -o rw /dev/$i /mnt/sda1 
            fi  
        done  
        ;;  
    remove)  
        MOUNT=`mount | grep -o '/mnt/sd[a-z][1-9]'`  
        for i in $MOUNT  
        do  
            umount $i  
            if [ $? -eq 0 ]  
            then  
                rm -r $i  
            fi  
        done  
        ;;  
esac 
#/sbin/block hotplug
